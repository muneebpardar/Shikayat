@model Shikayat.Domain.Entities.Suggestion
@using Shikayat.Domain.Enums
@using Shikayat.Domain.Entities
@{
    bool isCitizen = User.IsInRole("Citizen");
    Layout = isCitizen ? "_Layout" : "_AdminLayout";
    ViewData["Title"] = $"Suggestion #{Model.TicketId}";
}

<div class="row g-4">
    <!-- Left Sidebar - Suggestion Info & Actions -->
    <div class="col-md-4">
        <div class="card shadow-sm border-0 mb-3">
            <div class="card-header text-white d-flex justify-content-between align-items-center" style="background: linear-gradient(135deg, #20b2aa 0%, #17a2b8 100%);">
                <h5 class="mb-0">
                    <i class="bi bi-lightbulb-fill"></i> Ticket #@Model.TicketId
                </h5>
                @if (Model.IsImportant)
                {
                    <span class="badge bg-danger">
                        <i class="bi bi-flag-fill"></i> IMPORTANT
                    </span>
                }
            </div>
            <div class="card-body">
                <h4 class="card-title mb-3" style="color: #20b2aa;">@Model.Subject</h4>
                <div class="mb-3">
                    <span class="badge bg-@GetStatusColor(Model.Status) me-2">@Model.Status</span>
                    <span class="badge bg-warning text-dark">@Model.Priority Priority</span>
                </div>
                <hr />
                <p class="text-muted">@Model.Description</p>
                <hr />
                <ul class="list-group list-group-flush">
                    <li class="list-group-item px-0">
                        <strong><i class="bi bi-tag"></i> Category:</strong> @Model.SubCategory?.Name
                    </li>
                    <li class="list-group-item px-0">
                        <strong><i class="bi bi-geo-alt"></i> Location:</strong> 
                        @Model.Province?.Name > @Model.District?.Name > @Model.Tehsil?.Name
                    </li>
                    <li class="list-group-item px-0">
                        <strong><i class="bi bi-calendar"></i> Date:</strong> @Model.CreatedAt.ToString("g")
                    </li>
                </ul>

                @if (Model.AttachmentPath != null)
                {
                    <hr />
                    <div class="mb-3">
                        <strong><i class="bi bi-paperclip"></i> Attachment:</strong><br />
                        <a href="~/uploads/suggestions/@Model.AttachmentPath" target="_blank" class="btn btn-sm btn-outline-primary mt-2">
                            <i class="bi bi-download"></i> View Attachment
                        </a>
                    </div>
                }

                @if (Model.Status == ComplaintStatus.Resolved && !string.IsNullOrEmpty(Model.ResponseNote))
                {
                    <hr />
                    <div class="alert alert-success">
                        <h6 class="fw-bold mb-2">
                            <i class="bi bi-check-circle-fill"></i> Response Details
                        </h6>
                        <p class="mb-2">@Model.ResponseNote</p>
                        @if (!string.IsNullOrEmpty(Model.ResponseAttachmentPath))
                        {
                            <a href="~/uploads/suggestions/responses/@Model.ResponseAttachmentPath" target="_blank" class="btn btn-sm btn-outline-success mt-2">
                                <i class="bi bi-download"></i> View Response Proof
                            </a>
                        }
                        @if (Model.ResolvedAt.HasValue)
                        {
                            <small class="text-muted d-block mt-2">
                                Responded on: @Model.ResolvedAt.Value.ToString("MMM dd, yyyy 'at' hh:mm tt")
                            </small>
                        }
                    </div>
                }

                @if (User.IsInRole("SuperAdmin") || User.IsInRole("ProvincialAdmin") ||
                     User.IsInRole("DistrictAdmin") || User.IsInRole("ZonalAdmin"))
                {
                    <div class="action-panel mt-4">
                        <h6><i class="bi bi-gear"></i> Official Actions</h6>
                        
                        <form asp-action="UpdateStatus" method="post" enctype="multipart/form-data" class="mb-3">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <label class="form-label fw-bold small">Update Status:</label>
                            <div class="input-group">
                                <select name="status" class="form-select" asp-items="Html.GetEnumSelectList<ComplaintStatus>()" asp-for="Status" id="statusSelect">
                                </select>
                                <button type="submit" class="btn text-white" style="background: #20b2aa;">
                                    <i class="bi bi-check"></i> Update
                                </button>
                            </div>
                            <div class="response-note-container" style="display: none;">
                                <label class="form-label small fw-bold mt-2">Response Note <span class="text-danger">*</span>:</label>
                                <textarea name="responseNote" class="form-control" rows="3" required placeholder="Please provide your response to this suggestion..."></textarea>
                                <small class="text-muted">This note will be visible to the citizen.</small>
                                <div class="mt-2">
                                    <label class="form-label small">Response Proof (Optional):</label>
                                    <input type="file" name="responseAttachment" class="form-control form-control-sm" accept="image/*,.pdf" />
                                    <small class="text-muted">Upload proof of response (Max 5MB)</small>
                                </div>
                            </div>
                        </form>

                        @if (ViewBag.CanMarkImportant == true)
                        {
                            <hr />
                            <form asp-action="ToggleImportance" method="post">
                                <input type="hidden" name="id" value="@Model.Id" />
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" id="importanceSwitch"
                                           onchange="this.form.submit()" @(Model.IsImportant ? "checked" : "")>
                                    <label class="form-check-label fw-bold text-danger" for="importanceSwitch">
                                        <i class="bi bi-flag-fill"></i> Mark as Important
                                    </label>
                                </div>
                            </form>
                        }
                    </div>
                }
            </div>
        </div>
        @if (isCitizen)
        {
            <a asp-action="Index" class="btn btn-outline-secondary w-100">
                <i class="bi bi-arrow-left"></i> Back to My Suggestions
            </a>
        }
        else
        {
            <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-secondary w-100">
                <i class="bi bi-arrow-left"></i> Back to Dashboard
            </a>
        }
    </div>

    <!-- Right Side - Chat Interface -->
    <div class="col-md-8">
        <div class="chat-container">
            <div class="p-3 border-bottom bg-white">
                <ul class="nav nav-tabs border-0" id="chatTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active fw-bold" id="public-tab" data-bs-toggle="tab" data-bs-target="#public" type="button">
                            <i class="bi bi-chat-dots"></i> Citizen Chat
                        </button>
                    </li>
                    @if (ViewBag.CanLeaveNote == true)
                    {
                        <li class="nav-item" role="presentation">
                            <button class="nav-link fw-bold text-warning" id="internal-tab" data-bs-toggle="tab" data-bs-target="#internal" type="button">
                                <i class="bi bi-lock"></i> Internal Notes
                            </button>
                        </li>
                    }
                </ul>
            </div>

            <div class="tab-content flex-grow-1 d-flex flex-column" id="chatTabsContent">
                <!-- Public Chat Tab -->
                <div class="tab-pane fade show active flex-grow-1 d-flex flex-column" id="public" role="tabpanel">
                    <div class="chat-messages flex-grow-1" id="publicChatMessages">
                        @{
                            var publicLogs = (Model.Logs?.Where(l => l.Type == LogType.Public || l.Type == LogType.StatusChange).OrderBy(l => l.Timestamp).ToList()) ?? new List<ComplaintLog>();
                        }
                        @if (publicLogs.Any())
                        {
                            @foreach (var log in publicLogs)
                            {
                                if (log.Type == LogType.StatusChange)
                                {
                                    <div class="text-center mb-3">
                                        <span class="badge bg-secondary rounded-pill px-3 py-2">
                                            <i class="bi bi-info-circle"></i> @log.Message
                                        </span>
                                    </div>
                                }
                                else
                                {
                                    var isLogFromCitizen = log.SenderId == Model.CitizenId;
                                    var senderName = isLogFromCitizen ? "You" : (log.Sender?.FullName ?? "Official");
                                    var initials = string.Join("", senderName.Split(' ').Take(2).Select(n => n.Length > 0 ? n[0].ToString() : ""));
                                    var hasOverride = log.Message?.StartsWith("[Override]") ?? false;
                                    <div class="message-bubble @(isLogFromCitizen ? "citizen" : "admin")">
                                        <div class="message-content">
                                            <div class="message-header">
                                                <div class="message-avatar">@initials</div>
                                                <span class="message-sender">@senderName</span>
                                                @if (hasOverride)
                                                {
                                                    <span class="override-badge">OVERRIDE</span>
                                                }
                                            </div>
                                            <p class="message-text">@(hasOverride ? log.Message.Replace("[Override]", "").Trim() : log.Message)</p>
                                            <div class="message-time">@log.Timestamp.ToString("MMM dd, hh:mm tt")</div>
                                        </div>
                                    </div>
                                }
                            }
                        }
                        else
                        {
                            <div class="text-center text-muted mt-5">
                                <i class="bi bi-chat-dots" style="font-size: 3rem;"></i>
                                <p class="mt-3">No messages yet. Start the conversation!</p>
                            </div>
                        }
                    </div>

                    @if (ViewBag.CanChatPublic == true)
                    {
                        <div class="p-3 border-top bg-white">
                            <form asp-action="AddComment" method="post" id="chatForm">
                                <input type="hidden" name="SuggestionId" value="@Model.Id" />
                                <div class="input-group">
                                    <input type="text" name="Message" class="form-control" placeholder="Type a message to the citizen..." required id="messageInput" />
                                    <button class="btn text-white" type="submit" style="background: #20b2aa;">
                                        <i class="bi bi-send"></i> Send
                                    </button>
                                </div>
                            </form>
                        </div>
                    }
                </div>

                <!-- Internal Notes Tab -->
                <div class="tab-pane fade flex-grow-1 d-flex flex-column" id="internal" role="tabpanel">
                    <div class="chat-messages flex-grow-1 internal-notes-container p-3">
                        @{
                            var internalLogs = (Model.Logs?.Where(l => l.Type == LogType.InternalNote).OrderBy(l => l.Timestamp).ToList()) ?? new List<ComplaintLog>();
                        }
                        @if (internalLogs.Any())
                        {
                            @foreach (var log in internalLogs)
                            {
                                <div class="internal-note">
                                    <div class="internal-note-header">
                                        <span class="internal-note-author">
                                            <i class="bi bi-shield-lock"></i> @log.Sender?.FullName (Official Note)
                                        </span>
                                        <span class="internal-note-time">@log.Timestamp.ToString("MMM dd, hh:mm tt")</span>
                                    </div>
                                    <p class="mb-0 text-dark">@log.Message</p>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center text-muted mt-5">
                                <i class="bi bi-lock" style="font-size: 3rem;"></i>
                                <p class="mt-3">No internal notes yet.</p>
                            </div>
                        }
                    </div>

                    @if (ViewBag.CanLeaveNote == true)
                    {
                        <div class="p-3 border-top bg-warning bg-opacity-10">
                            <form asp-action="AddNote" method="post">
                                <input type="hidden" name="SuggestionId" value="@Model.Id" />
                                <div class="input-group">
                                    <input type="text" name="Message" class="form-control border-warning" placeholder="Leave a private note for other admins..." required />
                                    <button class="btn btn-warning" type="submit">
                                        <i class="bi bi-plus-circle"></i> Add Note
                                    </button>
                                </div>
                            </form>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetStatusColor(ComplaintStatus status)
    {
        return status switch
        {
            ComplaintStatus.Pending => "secondary",
            ComplaintStatus.InProgress => "info",
            ComplaintStatus.Resolved => "success",
            ComplaintStatus.Rejected => "danger",
            _ => "dark"
        };
    }
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const statusSelect = document.getElementById('statusSelect');
            const form = statusSelect?.closest('form');
            const responseContainer = form?.querySelector('.response-note-container');
            
            if (statusSelect && form) {
                function toggleResponseNote() {
                    if (statusSelect.value === 'Resolved') {
                        if (responseContainer) {
                            responseContainer.style.display = 'block';
                            responseContainer.querySelector('textarea[name="responseNote"]').required = true;
                        }
                    } else {
                        if (responseContainer) {
                            responseContainer.style.display = 'none';
                            responseContainer.querySelector('textarea[name="responseNote"]').required = false;
                        }
                    }
                }
                
                toggleResponseNote();
                statusSelect.addEventListener('change', toggleResponseNote);
            }

            const chatMessages = document.getElementById('publicChatMessages');
            if (chatMessages) {
                chatMessages.scrollTop = chatMessages.scrollHeight;
            }
        });
    </script>
}

